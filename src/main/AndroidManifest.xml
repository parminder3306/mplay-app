<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="in.mplay.app">

    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">
        <activity
            android:name=".activites.Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activites.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        <intent-filter>
            <action android:name="MainActivity" />
            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </activity>
        <activity
            android:name=".activites.Search"
            android:label="Search Movies"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activites.Info"
            android:label="Info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activites.Links"
            android:label="Get Links"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activites.Channels"
            android:label="Channels"
            android:theme="@style/AppTheme" />
        <activity
        android:name=".activites.ChannelMovies"
        android:label="Channels Movies"
        android:theme="@style/AppTheme" />
        <activity
            android:name=".activites.YouTubePlayerActivity"
            android:label="Channels Movies"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1737152255173320~1913690939"/>
        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />
        <service
            android:name=".FirebaseMessagingService" android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>